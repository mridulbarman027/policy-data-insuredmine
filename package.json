{
  "name": "policy-data-insuredmine",
  "version": "1.0.0",
  "description": "Backend server",
  "main": "/dist/src/index.js",
  "author": {
    "name": "Mridul Barman"
  },
  "scripts": {
    "dev": "ts-node-dev --inspect=8181 --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "stop": "pm2 stop pm2.config.js",
    "restart": "npm i && npm run build && pm2 restart pm2.config.js",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier -c \"**/*.{js,ts,json}\"",
    "format": "prettier -w \"**/*.{js,ts,json}\"",
    "lint": "eslint --fix ./src/*",
    "prepare": "husky install",
    "pre-commit": "npm run typecheck && lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint",
    "**/*.{js,ts,json}": "prettier --write"
  },
  "keywords": [],
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.5",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/request-ip": "^0.0.41",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.1",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "helmet": "^7.1.0",
    "mongoose": "^8.3.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "request-ip": "^3.3.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
